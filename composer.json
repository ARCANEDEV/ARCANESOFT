{
    "name": "arcanedev/arcanesoft",
    "description": "ARCANESOFT - CMS built with Laravel Framework.",
    "keywords": ["arcanedev", "arcanesoft", "cms", "framework", "laravel"],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.5.9",
        "laravel/framework": "~5.1.0",
        "arcanedev/composer": "~1.0",
        "arcanedev/laravel-html": "~5.1.0",
        "arcanedev/log-viewer": "~3.0",
        "arcanedev/moduly": "~2.0",
        "arcanedev/support": "~3.0",
        "arcanedev/no-captcha": "~2.0",
        "arcanedev/localization": "~0.6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "~4.0",
        "fzaninotto/faker": "~1.4",
        "mockery/mockery": "~0.9",
        "barryvdh/laravel-debugbar": "~2.0",
        "barryvdh/laravel-ide-helper": "~2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": ["database"]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan ide-helper:generate",
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "test": "vendor\\bin\\phpunit --coverage-text"
    },
    "config": {
        "preferred-install": "dist",
        "classmap-authoritative": false,
        "prepend-autoloader": true,
        "optimize-autoloader": true
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "modules/*/composer.json"
            ]
        }
    },
    "minimum-stability": "stable"
}

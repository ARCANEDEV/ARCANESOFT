{
    "name":        "arcanedev/arcanesoft",
    "description": "ARCANESOFT - CMS built with Laravel Framework.",
    "keywords":    ["arcanedev", "arcanesoft", "cms", "framework", "laravel"],
    "homepage":    "https://github.com/ARCANEDEV/ARCANESOFT",
    "license":     "MIT",
    "type":        "project",
    "require": {
        "php":                         ">=5.5.9",
        "laravel/framework":           "~5.1.0",
        "arcanedev/breadcrumbs":       "~2.1",
        "arcanedev/composer":          "~1.0",
        "arcanedev/hasher":            "~1.0",
        "arcanedev/gravatar":          "~1.0",
        "arcanedev/laravel-html":      "~5.1.0",
        "arcanedev/log-viewer":        "~3.0",
        "arcanedev/menus":             "~0.1",
        "arcanedev/no-captcha":        "~2.0",
        "arcanedev/notify":            "~3.0",
        "arcanedev/robots":            "~2.0",
        "arcanedev/sanitizer":         "~3.0",
        "arcanedev/seo-helper":        "~0.15",
        "arcanedev/support":           "~3.6"
    },
    "require-dev": {
        "barryvdh/laravel-debugbar":   "~2.0",
        "barryvdh/laravel-ide-helper": "~2.0",
        "fzaninotto/faker":            "~1.4",
        "phpunit/phpcov":              "~2.0",
        "phpunit/phpunit":             "~4.0|~5.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "classmap": ["database"]
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php artisan clear-compiled",
            "php artisan optimize"
        ],
        "pre-update-cmd": [
            "php artisan clear-compiled"
        ],
        "post-update-cmd": [
            "php artisan optimize"
        ],
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "php artisan key:generate"
        ],
        "test": "vendor\\bin\\phpunit --coverage-text"
    },
    "config": {
        "preferred-install":      "dist",
        "classmap-authoritative": false,
        "prepend-autoloader":     true,
        "optimize-autoloader":    true
    },
    "extra": {
        "merge-plugin": {
            "include": [
                "modules/*/composer.json"
            ]
        }
    },
    "minimum-stability": "stable"
}
